<style>

    .parent {
        height: 320px;
        overflow: hidden;
        border-radius: 5px;
        padding: 0px;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        text-align: center;

    }

    .child {
        width: 100%; /* lebar 100% dari wadah */
        height: 100%; /* tinggi gambar terserah anda */
        object-fit: cover; /* gambar dalam kotak cuy */
        transition: .5s;
        background-size: cover;
    }

    .parent:hover .child {
        transform: scale(1.1);
        cursor: pointer;
        filter: brightness(70%);
    }

    .parent:hover .content {
        opacity: 0.8;
        color: white;
    }

    .card{
        border-radius : 15px;
        box-shadow: 0px 2px 8px 0px #b0bec5;
        transition: 1s;
    }

    .card-body{
        padding: 14px;
        margin-top: 0px;

    }

    .content {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        opacity: 0;
        transition: 0.2s ease-in-out;

    }

    .content h3 {
            font-size: 45px;
    }

    .btn-primary{
        border-radius: 50px;
        width : 170px;
    }

    .btn-primary:hover{
        background-color: black;
    }

/*     h3 {
