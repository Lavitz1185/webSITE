@model Kegiatan
@{
    ViewData["title"] = "Detail";
}

<div class="row mt-4">
    <div class="col-md-6">
        <div class="row">
            @if (Model.DaftarFoto != null && Model.DaftarFoto.Count > 0)
            {
                @foreach (var foto in Model.DaftarFoto)
                {
                    <div class="col-4 mb-2">
                        <img src="@foto.PhotoPath" class="img-thumbnail" />
                    </div>
                }
            }
            else
            {
                <h3 class="Tidak Ada Foto"><b></b></h3>
            }
        </div>
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="row">
                    <div class="col-6">
                        <b>Nama Kegiatan</b>
                    </div>
                    <div class="col-6">
                        @Model.NamaKegiatan
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <b>Tempat Kegiatan</b>
                    </div>
                    <div class="col-6">
                        @Model.TempatKegiatan
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <b>Tanggal Mulai</b>
                    </div>
                    <div class="col-6">
                        @Model.TanggalMulai.ToShortDateString()
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <b>Tanggal Berakhir</b>
                    </div>
                    <div class="col-6">
                        @Model.TanggalBerakhir.ToShortDateString()
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <b>Keterangan</b>
                    </div>
                    <div class="col-6">
                        <p>
                            @Model.Keterangan
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col mx-auto">
                        <h4 class="text-center">Peserta Kegiatan</h4>
                    </div>
                </div>
                <div class="row">
                    @if (Model.DaftarMahasiswa != null && Model.DaftarMahasiswa.Count > 0)
                    {
                        <table class="table table-bordetable-bordered">
                            <thead>
                                <tr>
                                    <th width="50%">
                                        NIM
                                    </th>
                                    <th width="50%">
                                        Nama
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mahasiswa in Model.DaftarMahasiswa)
                                {
                                    <tr>
                                        <td>
                                            @mahasiswa.Nim
                                        </td>
                                        <td>
                                            @mahasiswa.NamaLengkap
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h4 class="text-center"><b>Tidak Ada Peserta Yang Pernah Diikuti</b></h4>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<a asp-controller="Kegiatan" asp-action="Index">Kembali</a>
