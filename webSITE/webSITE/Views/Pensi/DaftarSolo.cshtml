@using Humanizer
@model TambahPesertaVM
@{
    ViewData["Title"] = "Daftar";
}

<style>
    :root {
        --hue: 312;
        --first-color: hsl(var(--hue), 24%, 32%);
        --first-color-alt: hsl(var(--hue), 24%, 28%);
    }

    body {
        background-image: linear-gradient(to right, #fffcde, #ffeffe, #f4ddf2), url("D:/Website/webSITE/webSITE/webSITE/wwwroot/img/Pentas_Tari.png");
    }

    .btn-custom {
        background-color: var(--first-color);
        border: none;
    }

    .btn-custom:hover {
        background-color: var(--first-color-alt);
    }
</style>




<div class="container-lomba-solo">

    <div class="judul-lomba">
        <h3>Pendaftaran Lomba</h3>
        <p>Silakan isi form di bawah ini untuk mendaftar</p>
    </div>
    <div class="container-ketentuan">
        <a>Download Syarat dan ketentuan lomba disini <i class="ri-download-2-fill"></i></a>
    </div>

    <form asp-action="DaftarSolo" asp-route-id="@ViewData["id"]">
        <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>

        <div class="row input-box">
            <div class="col-md-12 col-12 mb-3">
                <label asp-for="@Model.Nim" class="form-label">NIM *</label>
                <input asp-for="@Model.Nim" type="text" class="input-pensi"/>
                <span asp-validation-for="@Model.Nim" class="form-text text-danger"></span>
            </div>
            <div class="col-md-12 col-12 mb-3">
                <label asp-for="@Model.Nama" class="form-label">Nama *</label>
                <input asp-for="@Model.Nama" type="text" class="input-pensi" />
                <span asp-validation-for="@Model.Nama" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="row input-box">
            <div class="col-md-12 col-12 mb-3">
                <label asp-for="@Model.JenisKelamin" class="form-label">Jenis Kelamin *</label>
                <select asp-for="@Model.JenisKelamin"
                        asp-items="@Enum.GetValues<JenisKelamin>()
                                    .Select(j => new SelectListItem(j.Humanize(), j.ToString()))"
                        class="input-pensi">
                </select>
                <span asp-validation-for="@Model.JenisKelamin" class="form-text text-danger"></span>
            </div>
            <div class="col-md-12 col-12 mb-3">
                <label asp-for="@Model.Angkatan" class="form-label">Angkatan *</label>
                <select asp-for="@Model.Angkatan"
                        asp-items="@Enum.GetValues<Angkatan>()
                                    .Select(j => new SelectListItem(j.Humanize(), j.ToString()))"
                        class="input-pensi">
                </select>
                <span asp-validation-for="@Model.Angkatan" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="row input-box">
            <div class="col-12 mb-3">
                <label asp-for="@Model.NoWa" class="form-label">Nomor WA *</label>
                <input asp-for="@Model.NoWa" type="text" class="input-pensi" />
                <span asp-validation-for="@Model.NoWa" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <button class="btn-custom w-100" style="border-radius: 10px; padding: 15px 10px;">Simpan</button>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}