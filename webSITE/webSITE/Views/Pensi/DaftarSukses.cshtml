@model Lomba
@{
    ViewData["Title"] = "Daftar";
    ViewData["Active"] = "Pengumuman";
}

<style>
    :root {
        --hue: 312;
        --first-color: hsl(var(--hue), 24%, 32%);
        --first-color-alt: hsl(var(--hue), 24%, 28%);
    }

    body {
        background: none; 
        scroll-behavior: smooth;
    }

    .bg-pendaftaran-solo img {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1; 
        scroll-behavior: smooth;
    }

    .judul-lomba img {
        filter: drop-shadow(5px 5px 10px rgba(0, 0, 0, .5));
    }

    .btn-custom {
        background-color: var(--first-color);
        border: none;
        width: 100%;
        padding: 10px 15px;
        border-radius: 10px;
        text-align: center;
    }

        .btn-custom:hover {
            background-color: var(--first-color-alt);
        }

</style>


<div class="bg-pendaftaran-solo">
    <img src="~/img/bg-pendafataran-pensi.jpg" alt="Background Image" />
</div>

<div class="container-lomba-solo animate__animated animate__fadeIn">
    <partial name="_ProgressPartial" model=@true />

    <div class="content">
        <div class="judul-lomba">
            <h3>Pendaftaran Berhasil!</h3>
            <img src="~/img/icon-selamat.png" alt="Icon Selamat" />
        </div>

        <div class="mt-1">
            <p>Silahkan Bergabung ke Grup WA Lomba Dibawah</p>
            <a href="@Model.LinkGrupWa.ToString()" target="_blank" rel="nofollow noreferrer"> @Model.LinkGrupWa.ToString()</a>
        </div>

        <div class="row mt-5 w-100">
            <div class="col-12">
                <a class="btn-custom d-block" asp-action="Index" asp-controller="Pensi" asp-area="">Selesai</a>
            </div>
        </div>

    </div>
</div>
