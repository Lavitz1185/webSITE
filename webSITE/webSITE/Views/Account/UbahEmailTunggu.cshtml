@{
    ViewData["Title"] = "Ubah Email";
    ViewData["ActiveMenuId"] = "ubahEmail";
}

<div class="container-fluid pt-5">
    <div class="row">
        <div class="col-md-3">
            <partial name="_MenuPartial" />
        </div>
        <div id="profil" class="col-md-9 me-auto">
            <div class="row">
                <div class="col">
                    <h1>Ubah Email</h1>
                </div>
            </div>
            <div class="row">
                <form id="formProfil" asp-controller="Account" asp-area="" asp-action="UbahEmailTungguPOST" 
                      asp-route-email="@ViewData["Email"]" class="col-md-9 d-flex flex-column gap-1" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row">
                        <div class="col d-flex justify-content-center align-items-center">
                            <button class="btn btn-primary" type="submit">Kirim Email Ulang</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}