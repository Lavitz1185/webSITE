                }

            #contact .laporkan .laporkan-col input,
            #contact .laporkan .laporkan-col textarea {
                width: 100%;
                font-size: 14px;
                font-weight: 400;
                border-radius: 3px;
                border: none;
                background: #fff;
                color: #7e7c87;
                outline: none;
                padding: 20px 30px;
                margin-bottom: 20px;
            }


            #contact .laporkan button {
                font-size: .9rem;
                padding: 13px 25px;
                background: rgb(21, 21, 100);
                border-radius: 5px;
                outline: none;
                border: none;
                font-weight: 600;
                cursor: pointer;
                color: #ffffff;
            }

            #contact .laporkan a {
                font-size: .9rem;
                padding: 13px 25px;
                background: rgb(21, 21, 100);
                border-radius: 5px;
                outline: none;
                border: none;
                font-weight: 600;
                cursor: pointer;
                color: #ffffff;
                text-decoration: none;
            }

    #pro-links {
        margin-top: 10px;
    }

    .pro-links i {
        padding: 10px 13px;
        margin-right: 3px;
        border: 1px solid rgb(21, 21, 100);
        cursor: pointer;
        transition: 0.3s ease;
    }

        .pro-links i:hover {
