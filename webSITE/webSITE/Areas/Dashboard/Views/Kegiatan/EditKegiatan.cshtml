@model EditKegiatanVM
@{
    ViewData["Title"] = "Edit Kegiatan";
}

<div class="edit-kegiatan">
    <!-- Hyperlink -->
    <h1 class="title">Edit Kegiatan</h1>
    <ul class="breadcrumbs mb-4">
        <li><a asp-action="Index">Kegiatan</a></li>
        <li class="divider">/</li>
        <li><a href="#" class="active">Edit Kegiatan</a></li>
    </ul>
    <!-- Akhir Hyperlink -->
    <div class="container-fluid cardplus">
        <form asp-action="EditKegiatan" method="post" class="row" enctype="multipart/form-data">
            <span class="text-danger" asp-validation-summary="All"></span>

            <input type="text" asp-for="@Model.Id" hidden="hidden">

            <div class="col-md-6 input-box">
                <label asp-for="@Model.NamaKegiatan"></label>
                <input class="form-control" type="text" asp-for="@Model.NamaKegiatan">
                <span class="text-danger" asp-validation-for="@Model.NamaKegiatan"></span>
            </div>
            <div class="col-md-6 input-box">
                <label asp-for="@Model.TempatKegiatan"></label>
                <input class="form-control" type="text" asp-for="@Model.TempatKegiatan">
                <span class="text-danger" asp-validation-for="@Model.TempatKegiatan"></span>
            </div>
            <div class="col-md-6 mt-2 input-box">
                <label asp-for="@Model.Tanggal"></label>
                <input class="form-control" type="date" asp-for="@Model.Tanggal">
                <span class="text-danger" asp-validation-for="@Model.Tanggal"></span>
            </div>
            <div class="col-md-6 mt-2 input-box">
                <label asp-for="@Model.JumlahHari"></label>
                <input class="form-control" type="number" asp-for="@Model.JumlahHari">
                <span class="text-danger" asp-validation-for="@Model.JumlahHari"></span>
            </div>
            <div class="col-12 mt-2 input-box">
                <label asp-for="@Model.Keterangan"></label>
                <textarea class="form-control" type="text" rows="5" cols="30" asp-for="@Model.Keterangan"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Keterangan"></span>
            </div>

            <div class="col-12 mt-2">
                <label asp-for="@Model.DaftarIdFoto" class="form-label"></label>
                <span class="text-danger form-text" asp-validation-for="@Model.DaftarIdFoto"></span>
                <vc:foto-picker name=@nameof(EditKegiatanVM.DaftarIdFoto) multi=true value=@Model.DaftarIdFoto>
                </vc:foto-picker>
            </div>

            <div class="col-12 mt-2">
                <label asp-for="@Model.DaftarIdMahasiswa" class="form-label"></label>
                <span class="text-danger form-text" asp-validation-for="@Model.DaftarIdMahasiswa"></span>
                <vc:mahasiswa-picker input-name=@nameof(EditKegiatanVM.DaftarIdMahasiswa) multi=true value=@Model.DaftarIdMahasiswa>
                </vc:mahasiswa-picker>
            </div>

            <div class="col-12 mt-2 d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Simpan</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
