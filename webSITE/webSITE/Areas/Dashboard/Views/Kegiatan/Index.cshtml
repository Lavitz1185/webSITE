@model List<Kegiatan>
@{
    ViewData["Title"] = "Kegiatan - Index";
}



<div class="kegiaatan">
    <h1 class="title">Kegiatan</h1>
    <ul class="breadcrumbs mb-4">
        <li><a href="#">Kegiatan</a></li>
        <li class="divider">/</li>
        <li><a href="#" class="active">Kegiatan</a></li>
    </ul>
    <div class="mb-4 mt-4">
        <a style="" class="btn btn-custom w-100" asp-area="Dashboard" asp-controller="Kegiatan" asp-action="TambahKegiatan"> + Tambah Kegiatan</a>
    </div>
    <div class="container">
        <table class="table table-bordered table-stripped">
            <thead>
                <tr>
                    <th width ="5%;">ID</th>
                    <th width="40%;">Nama</th>
                    <th width="5%;">Tanggal</th>
                    <th width="5%;">Jumlah Hari</th>
                    <th width="5%;">Tempat Kegiatan</th>
                    <th width="30%;">Keterangan</th>
                    <th width="10%;">Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kegiatan in Model)
                {
                    <tr>
                        <td>@kegiatan.Id</td>
                        <td>@kegiatan.NamaKegiatan</td>
                        <td>@kegiatan.Tanggal.ToShortDateString()</td>
                        <td>@kegiatan.JumlahHari</td>
                        <td>@kegiatan.TempatKegiatan</td>
                        <td>Lihat Pada Detail Kegiatan</td>
                        <td>
                            <div class="d-flex gap-1 justify-content-start">
                                <a class="btn btn-warning" asp-action="Detail" asp-route-id="@kegiatan.Id">
                                    <i class='fas fa-eye' style='color:#ffffff'></i>
                                </a>
                                <a class="btn btn-primary" asp-action="EditKegiatan" asp-route-id="@kegiatan.Id">
                                    <i class="fas fa-pen-square fa-lg"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@kegiatan.Id" method="post">
                                    <button type="submit" style="padding:10px 18px;" class="btn btn-danger"><i class="fa fa-regular fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_DataTable" />
}