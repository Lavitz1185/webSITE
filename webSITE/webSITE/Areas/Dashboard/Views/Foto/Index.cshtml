@model List<Foto>
@{
    ViewData["Title"] = "Album";
    ViewData["Active"] = "Album";
}

<style>
    .parent {
        height: 320px;
        overflow: hidden;
        border-radius: 5px;
        padding: 0px;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        text-align: center;
    }

    .child {
        width: 100%; /* lebar 100% dari wadah */
        height: 100%; /* tinggi gambar terserah anda */
        object-fit: cover; /* gambar dalam kotak cuy */
        transition: .5s;
        background-size: cover;
    }

    .parent:hover .child {
        transform: scale(1.1);
        cursor: pointer;
        filter: brightness(70%);
    }

    .parent:hover .content {
        opacity: 0.8;
        color: white;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0px 2px 8px 0px #b0bec5;
        transition: 1s;
    }

    .card-body {
        padding: 14px;
        margin-top: 0px;
    }

    .content {
        position: absolute;
        top: 0;
        left: 0;
        color: white;
        opacity: 0;
        transition: 0.2s ease-in-out;
        height: 320px;
        width: 100%;
    }

        .content h3 {
            font-size: 45px;
        }

        .content a {
            text-decoration: none;
            color: white;
            display: flex;
            height: 100%;
            width: 100%;
            text-align: center;
            align-items: center;
            justify-content: center;
        }

    h5 {
        font-weight: 700;
        color: rgb(35, 35, 85);
    }

    h1 {
        font-size: 30px;
    }

    .card-title {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis; /* Ganti ujung teks dengan (...) */
        display: block;
        max-width: 100%;
    }
</style>

@{
    string view = (ViewData["view"] as string)!;
}



<div class="foto-semua">
    <!-- Hyperlink -->
    <h1 class="title">Galeri</h1>
    <ul class="breadcrumbs mb-4">
        <li><a href="#">Album</a></li>
        <li class="divider">/</li>
        <li><a href="#" class="active">Galeri</a></li>
    </ul>
    <!-- Akhir Hyperlink -->

    <div class="container">

        <!-- ==== Modal untuk Peserta Kegiatan ==== -->
        @foreach (var foto in Model)
        {
            <div class="modal fade" id="modal@(foto.Id)" tabindex="-1" aria-labelledby="modal@(foto.Id)" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered custom-modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title" id="exampleModalLabel">Daftar Peserta</h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="container">
                                <ul class="responsive-table">
                                    @foreach (var mahasiswa in foto.DaftarMahasiswa)
                                    {
                                        <li class="table-row">
                                            <!-- Foto Profil Peserta -->
                                            <div class="col col-1 text-center">
                                                <img src="@Url.Action("FotoProfil", "File", new { Area = "", id = mahasiswa.Id })" alt="" class="img-thumbnail">
                                            </div>
                                            <!-- Nama Peserta -->
                                            <div class="col col-4 text-center">
                                                <span class="participant-name">@mahasiswa.NamaLengkap</span>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- Tombol Close/Keluar -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- ==== Akhir Modal untuk Peserta Kegiatan ==== -->

       

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10%;">ID</th>
                    <th style="width: 15%;">Foto</th>
                    <th style="width: 20%;">Tanggal Dibuat</th>
                    <th style="width: 20%;">Tanggal Diubah</th>
                    <th style="width: 20%;">Pembuat</th>
                    <th style="width: 15%;">Aksi</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var foto in Model)
                {
                    <tr>
                        <td>@foto.Id</td>
                        <td>
                            <img class="imag-fluid" src="@Url.Action("Foto", "File", new {Area="", Id = foto.Id})">
                        </td>
                        <td>@foto.AddedAt.ToString("dd/MMM/yyyy hh:mm tt")</td>
                        <td>@(foto.ModifiedAt.HasValue ? foto.ModifiedAt.Value.ToString("dd/MMM/yyyy hh:mm tt") : "")</td>
                        <td>@(foto.Creator is not null ? foto.Creator.NamaLengkap : "Tidak Ada")</td>
                        <td>
                            <div class="d-flex gap-1 justify-content-center">

                                <button class="btn btn-warning" type="button"
                                        data-bs-toggle="modal" data-bs-target="#modal@(foto.Id)">
                                    <i style="color:white;" class="fa fa-regular fa-eye"></i>
                                </button>

                                <a class="btn btn-primary">
                                    <i class="fas fa-pen-square fa-lg"></i>
                                </a>

                                <form asp-action="Delete" asp-route-id="@foto.Id">
                                    <button type="submit" style="padding: 7px 14px;" class="btn btn-danger"><i class="fa fa-regular fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>

@section Scripts {
    <partial name="_DataTable" />
}