@model EditMahasiswaVM

@inject RoleManager<IdentityRole> _roleManager

<h1>Edit Mahasiswa</h1>

<form action="" method="post" class="row d-flex justify-content-center">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" readonly="true" />
    </div>

    <div class="col-md-6">
        <label asp-for="@Model.NamaLengkap"></label>
        <input asp-for="@Model.NamaLengkap" readonly="true" />
    </div>

    <div class="col-md-6">
        <label asp-for="@Model.StatusAkun"></label>
        <select asp-for="@Model.StatusAkun">
            @foreach (StatusAkun status in Enum.GetValues(typeof(StatusAkun)))
            {
                <option value="@status">@StatusAkunExtension.ToString(status)</option>
            }
        </select>
    </div>

    <div class="col-md-6">
        <label asp-for="@Model.Admin"></label>
        <input type="checkbox" asp-for="@Model.Admin" />
    </div>

    <div class="col-md-4 d-flex justify-content-center">
        <button class="btn btn-primary" type="submit">Edit</button>
    </div>

</form>

<a asp-action="Index">
    Kembali
</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}