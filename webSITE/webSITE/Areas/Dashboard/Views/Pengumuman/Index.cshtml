@using System.Globalization
@model List<Pengumuman>
@{
    ViewData["Title"] = "Pengumuman";
    var cultureInfo = new CultureInfo("id-ID");
}

<div class="pengumumann">
    <h1 class="title">Pengumuman</h1>
    <ul class="breadcrumbs mb-4">
        <li><a href="#">Pengumuman</a></li>
        <li class="divider">/</li>
        <li><a href="#" class="active">Pengumuman</a></li>
    </ul>
    <div class="mb-4 mt-4">
        <a style="" class="btn btn-custom w-100" asp-area="Dashboard" asp-controller="Pengumuman" asp-action="Tambah"> + Tambah Pengumuman</a>
    </div>
    <div class="container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width: 5%;">ID</th>
                    <th style="width: 8%;">Foto</th>
                    <th style="width: 20%;">Judul</th>
                    <th style="width: 10%;">Prioritas</th>
                    <th style="width: 30%;">Isi</th>
                    <th style="width: 17%;">Tanggal</th>
                    <th style="width: 10%;">Aksi</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <img class="img-fluid" src="@Url.Action("Foto", "File", new {Area = "", id = item.Foto?.Id})" />
                        </td>
                        <td>@item.Judul</td>
                        <td class="text-center">
                            <form method="post" asp-action="Prioritas" asp-route-id="@item.Id" asp-route-priority="@((!item.IsPriority).ToString().ToLower())">
                                <button type="submit" class="btn btn-primary">
                                    @Html.Raw(item.IsPriority ? "<i class='ri-check-fill'></i>" : "<i class='ri-close-fill'></i>")
                                </button>
                            </form>

                        </td>
                        <td>@item.Isi</td>
                        <td>@item.AddedAt.ToString(cultureInfo.DateTimeFormat.ShortDatePattern, cultureInfo)</td>
                        
                        <td>
                            <div class="d-flex gap-1 justify-content-start">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-pen-square fa-lg"></i>
                                </a>
                                <form asp-action="Hapus" asp-route-id="@item.Id" method="post">
                                    <button style="padding:10px 20px;" type="submit" class="btn btn-danger"><i class="fa fa-regular fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

@section Scripts {
    <partial name="_DataTable" />
}