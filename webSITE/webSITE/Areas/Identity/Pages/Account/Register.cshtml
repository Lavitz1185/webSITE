@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<div style="padding-top: 70px">
<div class="row">
    <div class="col-md-4 mx-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Nim" class="form-control" autocomplete="2206080000" aria-required="true" />
                <label asp-for="Input.Nim"></label>
                <span asp-validation-for="Input.Nim" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NamaLengkap" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="Input.NamaLengkap"></label>
                <span asp-validation-for="Input.NamaLengkap" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NamaPangggilan" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="Input.NamaPangggilan"></label>
                <span asp-validation-for="Input.NamaPangggilan" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.TanggalLahir" class="form-control" aria-required="true" type="date" />
                <label asp-for="Input.TanggalLahir"></label>
                <span asp-validation-for="Input.TanggalLahir" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select class="form-control" asp-for="Input.JenisKelamin">
                    @foreach (JenisKelamin jk in Enum.GetValues(typeof(JenisKelamin)))
                    {
                        <option value="@jk">@JenisKelaminExtension.ToString(jk)</option>
                    }
                </select>
                <label asp-for="Input.JenisKelamin"></label>
                <span asp-validation-for="Input.JenisKelamin" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
